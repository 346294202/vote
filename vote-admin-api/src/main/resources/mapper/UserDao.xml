<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.leoyon.vote.user.dao.UserDao">
	
	<select id="find" parameterType="com.leoyon.vote.user.FindUserRequest" resultType="com.leoyon.vote.user.User">
		select * from vote_user 
		<where>
			<if test="q != null and q !=''">
				and mobile like '%${q}%'
			</if>
			<if test="active != null">
				and active=#{active}
			</if>			
		</where>
		order by date_create desc
		LIMIT #{page} , #{psize};
	</select>
	
	<update id="update" parameterType="com.leoyon.vote.user.User">
	update vote_user
	<set>
		<if test="active != null">
				active = #{active},
		</if>
	</set>
	where id = #{id}	
	</update>
	
</mapper>
