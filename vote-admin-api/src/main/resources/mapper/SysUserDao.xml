<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.leoyon.vote.user.dao.SysUserDao">

	<insert id="addUser" parameterType="com.leoyon.vote.user.SysUser" useGeneratedKeys="true" keyProperty="id">
		insert into sys_user (username,password,salt,active,superuser,staff,date_create,last_login_time,last_login_ip,email) values(
			#{username},#{password},#{salt},#{active},#{superuser},#{staff},#{dateCreate},#{lastLoginTime},#{lastLoginIp},#{email}
		);
	</insert>
	
	<update id="updateUser" parameterType="com.leoyon.vote.user.SysUser">
	update sys_user
	<set>
		<if test="username != null and username != ''">
				username = #{username},
		</if>
		<if test="password != null and password != ''">
				password = #{password},
		</if>	
		<if test="active != null">
				active = #{active},
		</if>			
		<if test="superuser != null">
				superuser = #{superuser},
		</if>			
		<if test="staff != null">
				staff = #{staff},
		</if>		
		<if test="email != null and email != ''">
				email = #{email},
		</if>				
	</set>
	where id = #{id}
	</update>
	
	<select id="getUser" parameterType="String" resultType="com.leoyon.vote.user.SysUser">
		select * from sys_user where username=#{username} and active=1;
	</select>
	
	<select id="getUserById" parameterType="Long" resultType="com.leoyon.vote.user.SysUser">
		select * from sys_user where id=#{id} and active=1;
	</select>	
	
	<select id="findUser" parameterType="com.leoyon.vote.user.FindSysUserRequest" resultType="com.leoyon.vote.user.SysUser">
		select * from sys_user 
		<where>
			<if test="q != null and q !=''">
				and username like '%${q}%'
			</if>
			<if test="active != null">
				and active=#{active}
			</if>			
		</where>
		order by date_create desc
		LIMIT #{page} , #{psize};
	</select>
	
</mapper>
